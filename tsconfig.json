{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "index.d.ts"],
    "lib": ["es2015"]
  },
  "exclude": ["dist", "node_modules", "tests"]
}
